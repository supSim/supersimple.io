.personal-icon-style{
  display: flex;
  flex-direction:row;
  height: 60rpx;
  width: 120rpx;
  font-size: 60rpx !important;
  justify-content: flex-start;
}

.personal-icon-style1{
  display: flex;
  height: 60rpx;
  width: 120rpx;
  font-size: 60rpx !important;
  justify-content: center;
}

.personal-icon-style2{
  display: flex;
  flex-direction:row;
  height: 60rpx;
  width: 80rpx;
  font-size: 40rpx !important;
  justify-content: flex-end;
  padding-top: 11px;
}

.personal-icon-style3{
  display: flex;
  flex-direction:row;
  height: 60rpx;
  width: 350rpx;
  font-size: 40rpx !important;
  justify-content: flex-end;
}

.userinfo {
  display: flex;
  flex-direction: row;
  width: 108rpx;
  height: 108rpx;
  margin: 0rpx;
  align-items: flex-start;
  background: #f0145a;
}
.account-bg {
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  display: flex;
  flex-direction: row;
  width: 108rpx;
  height: 108rpx;
  margin: 0rpx;
  border-radius: 50%;
  align-items: flex-start;
}
.userinfo-nickname {
  font-size: 38rpx;
  margin: 0rpx;
  width: 60%;
  color: green;
}
/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120rpx;
  justify-content: flex-start 
}
.myorder-text {
  font-size: 38rpx;
  color: black;
  margin: 30rpx;
  width: 60%;
}
.myorder-text1 {
  font-size: 35rpx;
  color: gray;
  margin:30rpx;
  width: 60%;
  padding-left:80px;
}

.gray-line {
  width: 100%;
  height: 3rpx;
  background: gray;
  margin-left: 0rpx;
}

.gray-line2 {
  width: 100%;
  height: 20rpx;
  background: gray;
  margin-left: 0rpx;
}

.navs {
  display: flex;
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}
/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-items: left;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  justify-content:space-around;
}
.item-text {
  color: black;
  font-size: 35rpx;
  width:200rpx;
  margin-right: 50rpx;
  margin-top: 0rpx;
  padding-right: 0px;
}
.person-line {
  display:flex;
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}
.separate-line {
  width: 100%;
  height: 20rpx;
  background: white;
  margin-left: 90rpx;
}