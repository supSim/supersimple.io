@import '../../asset/color/color.wxss';
.detail-goods-image {
  display: block;
  height: 375rpx;
  width: 750rpx;
  background-color: red;
  margin-top: 103rpx;
}

.detail-price-info {
  display: flex;
  height: 100rpx;
  width: 750rpx;
}

.price-info-left {
  display: flex;
  padding: 0 20rpx;
  width: 400rpx;
  background: red;
  justify-content: space-between;
}

.detail-price-common-style {
  display: inline-flex;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
}

.border-block {
  border-top: 50rpx solid red;
  border-left: 50rpx solid red;
  border-bottom: 50rpx solid red;
  border-right: 50rpx solid #FFC125;
}

.price-info-right {
  display: flex;
  flex-direction: column;
  height: 100rpx;
  width: 250rpx;
}

.price-right-style {
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  vertical-align: middle;
  font-size: 28rpx;
  color: grey;
}

.detail-goods-desc {
  display: flex;
  height: 100rpx;
  width: 100%;
  flex-direction: column;
}
.border-bottom {
  border-bottom: 1px solid;
}

.detail-goods-name {
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  vertical-align: center;
  font-size: 35rpx;
  font-weight: bold;
}

.detail-focus-num {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  float: right;
  font-size: 28rpx;
  color: white;
  margin-right: 20rpx;
}

.sale-time-info {
  display: inline-flex;
  flex-direction: column;
  width: 490rpx;
  font-size: 25rpx;
  padding-left: 10rpx;
}

.detail-sale-info {
  display: flex;
  height: 100rpx;
  width: 100%;
  justify-content: space-between;
}
.sale-time-style {
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  vertical-align: center;
}

.detail-sale-num {
  margin-top: 50rpx;
  display: inline-block;
  font-size: 25rpx;
  padding-right: 10rpx;
  vertical-align: bottom;
}

.detail-text {
  display: inline-block;
}